@model JSONtoWebForm.Models.jsondatatbl
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>save</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="width:40%;margin-top:2%">
        @if (Model != null)
        {
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th colspan="3">Hobbies</th>
                </tr>
                <tr>
                    <td>@Model.name</td>
                    <td>@Model.gender</td>

                    @if (Model.hobbie1 != null)
                    {
                        <td>
                            @Model.hobbie1
                        </td>
                    }
                        @if (Model.hobbie2 != null)
                        {
                            <td>
                                @Model.hobbie2
                            </td>
                        }
                        @if (Model.hobbie3 != null)
                        {
                            <td>
                                @Model.hobbie3
                            </td>

                        }




                        </tr>


            </table>
        }

    </div>

</body>
</html>
